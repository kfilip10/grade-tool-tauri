{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "grade-tool-tauri",
  "version": "0.5.5",
  "identifier": "com.kfilip10.updater",
  "build": {
    "frontendDist": "../frontend/build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Grade Analysis Tool",
        "width": 400,
        "height": 400,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "msi",
    "publisher": "Kevin Filip",
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "resources": ["assets/**/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "installMode": "basicUi",
      "endpoints": [
        "https://github.com/kfilip10/grade-tool-tauri/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJFQTdBMjc1ODkwMkM5QUYKUldTdnlRS0pkYUtuTG9lYXhZeEtvcGlRU2lWRis2c3hSMHd4QTNaTjhQVkR1UlFvN3J5N3lIT3AK"
    }
  }
}
